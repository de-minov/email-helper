.email-helper
  display inline-block
  position relative
  
  &__list
    display block
    width 100%
    max-height (4 * 1.5rem)
    border-radius 4px
    background-color #fff
    opacity 0
    overflow hidden auto
    pointer-events none
    position absolute
    left 0
    top 100%
    padding 5px 0
    box-sizing content-box
    transition .3s ease
    transition-property opacity, transform
    
    // tiny scroll
    scrollbar-color #999 transparent !important
    scrollbar-width thin !important

    &::-webkit-scrollbar
      width 8px !important
      background-color transparent !important
      &-thumb
        background-color #ccc !important
        
    > div
      display block
      width 100%
      height 1.5rem
      line-height @height
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      color #666
      padding 0 10px
      box-sizing border-box
      cursor pointer
      transition .3s ease
      transition-property background-color, color
      
      &:hover
      &:active
        background-color #ccc
        color #000
        
  &--dropped &__list
    opacity 1
    transform translateY(10px)
    pointer-events auto